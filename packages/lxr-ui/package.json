{
  "name": "lxr-ui",
  "version": "0.0.3",
  "description": "A Vue Component Library for LeanIX Custom Reports",
  "main": "dist/lxr-ui.ssr.js",
  "browser": "dist/lxr-ui.esm.js",
  "module": "dist/lxr-ui.esm.js",
  "unpkg": "dist/lxr-ui.min.js",
  "types": "dist/types/src/entry.esm.d.ts",
  "files": [
    "dist/*",
    "src/lib-components/**/*"
  ],
  "sideEffects": false,
  "scripts": {
    "prebuild": "rimraf ./dist",
    "dev": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es --watch",
    "extractCss": "npx tailwindcss -o dist/lxr-ui.css",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js & npm run extractCss",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife",
    "postbuild": "rimraf ./dist/types/dev ./dist/types/src/entry.d.ts",
    "lint": "eslint ./src --ext js,ts,tsx --max-warnings 0 --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-typescript": "^4.5.13",
    "@vue/cli-service": "^4.5.13",
    "@vue/compiler-sfc": "^3.0.11",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "autoprefixer": "^10.4.0",
    "cross-env": "^7.0.3",
    "minimist": "^1.2.5",
    "postcss": "^8.4.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.8",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "rollup-plugin-vue": "^6.0.0",
    "tailwindcss": "^3.0.7",
    "ttypescript": "^1.5.12",
    "typescript": "^4.0.3",
    "vue": "^3.0.5"
  },
  "peerDependencies": {
    "vue": "^3.0.5"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/vue-fontawesome": "^3.0.0-5"
  }
}
